<!--Saved Articles Page-->

<div class="container">

    <div class="col-md-12 jumbotron">
        <div class="text-center">
            <h1> Saved Articles</h1>
            <h3> Click the news title for reading whole article. </article></h3>
        </div>
    </div>
    <div class="col-md-12">
        {{#if article}}
            {{#each article}}
                <div class="panel panel-default">
                    <div class="panel-heading">
                    <a href="https://www.nytimes.com{{this.link}}" target="_blank"><h4>{{this.title}}</h4></a>
                    </div>
                    <div class="panel-body">
                        <p> <h5>Summary :</h5> {{this.summary}}</p>
                        <img src={{this.img}}>
                        <br><br>
                        <button type="button" class="btn btn-default addNote" data-toggle="modal" data-target="#noteModal{{this._id}}" data-id={{this._id}}>Add a Note</button>
                        <button type="button" class="btn btn-primary delete" data-id={{this._id}}>Delete</button>
                    </div>
                </div>
            {{/each}}
        {{else}}
        <div class="panel panel-default">
            <div class="panel-body">
                <h4>You have no saved articles.</h4>
            </div>
        </div>
        {{/if}}
    </div>
</div>

